.toplist_menu {
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.toplist{
  width: 46%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}
.toplist>image{
  width: 300rpx;
  height: 300rpx;
  border-radius: 20rpx;
}
.toplist_title{
  color: #333;
  font-size: 30rpx;
  line-height: 50rpx;
}