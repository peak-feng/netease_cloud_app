.search-box {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background: #DC4238;
}

.search {
  width: 90%;
  border: 1rpx solid #DE655C;
  background: #DE655C;
  border-radius: 20rpx;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: relative;
}

.search-input {
  padding-left: 100rpx;
}

.search_img {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 5rpx;
  left: 150rpx;
}

.pla_search {
  text-align: center;
  color: #EDA8A3;
}

.wallpaper {
  width: 100%;
  height: 310rpx;
}

swiper-item {
  display: flex;
  justify-content: center;
  align-items: center;
}

.banner_img {
  width: 95%;
  height: 100%;
  border-radius: 10rpx;
}

.comment_container_box {
  width: 100%;
  display: flex;
  height: 130rpx;
  position: relative;
  margin-top: 20rpx;
  padding-bottom: 40rpx;
  border-bottom: 1px solid #EDEEF0;
}

.comment_box {
  width: 25%;
  text-align: center;
}

.contaner_images {
  width: 80rpx;
  height: 40px;
  background-color: #DC4238;
  border-radius: 50%;
  left: 50%;
  transform: translate(60%)
}

.commentImage {
  width: 50%;
  height: 50%;
  top: 50%;
  left: 50%;
  transform: translate(0%, 50%)
}

.comment_text {
  font-size: 14px;
}

.personalized_box {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.personalized_menu {
  width: 100%;
  margin: 20rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
  align-items: center;
}

.personalized_list{
  margin-top: 30rpx;
}

.personalized_img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
}

.personalized_title {
  font-size: 20rpx;
  color: #333;
  width: 200rpx;
}